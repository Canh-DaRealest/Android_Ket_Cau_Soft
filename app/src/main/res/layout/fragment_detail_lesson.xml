<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_lesson_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fr_video"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_thumnail_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/gray_light" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/green"
            android:progress="@integer/material_motion_duration_short_1" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_lesson_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="@string/review"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/fr_video" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/bt_previous_lesson"
            android:layout_width="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="Bài trước" />

        <Button
            android:id="@+id/bt_next_leson"
            android:layout_width="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="Bài tiếp" />
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>