<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cl_item_play_container"
    android:layout_gravity="center"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_previous_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_previous_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_play_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_play_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_play_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_next_video"
        app:layout_constraintStart_toEndOf="@id/iv_previous_video"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_next_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_next_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_play_video"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>