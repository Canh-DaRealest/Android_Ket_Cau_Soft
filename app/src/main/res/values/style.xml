<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textField" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox.Dense">
        //mau hint text khi duoc focus
        <item name="hintTextColor">@color/blue</item>
        //mau con tro van ban
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="marginHorizontal">15dp</item>
        <!--        <item name="boxCornerRadiusTopEnd">10dp</item>-->
        <!--        <item name="boxCornerRadiusTopStart">10dp</item>-->
        <!--        <item name="boxBackgroundMode">none</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="labelStyle">@color/gray_light</item>
        <item name="errorTextColor">@color/red</item>

    </style>
    <style name="textlabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="errorText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>


    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="edittext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/roundcorner</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

    </style>


    <style name="button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="marginHorizontal">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">15dp</item>

    </style>

    <style name="materialsRipple">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleColor">#E69DA69E</item>
        <item name="mrl_rippleDuration">200</item>
        <item name="mrl_rippleFadeDuration">75</item>
        <item name="mrl_rippleHover">true</item>
    </style>


    <style name="lineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DAD5D5</item>
    </style>


    <style name="radioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:buttonTint">@color/blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

</resources>